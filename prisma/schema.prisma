generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id          Int       @id @default(autoincrement())
  name        String
  address     String
  location    String
  rating      Float?
  ratingCount Int?      @map("rating_count")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  Room         Room[]
  RoomCategory RoomCategory[]

  @@map("hotels")
}

model RoomCategory {
  id        Int       @id @default(autoincrement())
  hotelId   Int       @map("hotel_id")
  price     Int
  roomType  RoomType  @map("room_type")
  roomCount Int       @map("room_count")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  //relation
  hotel Hotel  @relation(fields: [hotelId], references: [id])
  Room  Room[]

  @@map("room_categories")
}

enum RoomType {
  SINGLE
  DOUBLE
  SUITE
  DELUXE
  FAMILY
}

model Room {
  id                 Int      @id @default(autoincrement())
  hotelId            Int      @map("hotel_id")
  roomCategoryId     Int      @map("room_category_id")
  dateOfAvailability DateTime @map("date_of_availability")

  // Relations
  hotel     Hotel        @relation(fields: [hotelId], references: [id])
  category  RoomCategory @relation(fields: [roomCategoryId], references: [id])
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  deletedAt DateTime?    @map("deleted_at")

  @@map("rooms")
}
